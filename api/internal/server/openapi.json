{
  "openapi": "3.1.0",
  "info": {
    "title": "CityQuiz API",
    "version": "0.1.0",
    "description": "HTTP and WebSocket API for CityQuiz."
  },
  "servers": [
    {
      "url": "/",
      "description": "Current host"
    }
  ],
  "paths": {
    "/healthz": {
      "get": {
        "summary": "Health check",
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "Service healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "503": {
            "description": "Service unhealthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/ws/echo": {
      "get": {
        "summary": "WebSocket echo endpoint",
        "description": "Upgrade to WebSocket and echo messages back.",
        "operationId": "getWebSocketEcho",
        "responses": {
          "101": {
            "description": "Switching Protocols"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthCheckResult": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "ok",
              "error"
            ]
          }
        },
        "required": [
          "status"
        ],
        "additionalProperties": false
      },
      "HealthResponse": {
        "type": "object",
        "properties": {
          "sqlite": {
            "$ref": "#/components/schemas/HealthCheckResult"
          }
        },
        "required": [
          "sqlite"
        ],
        "additionalProperties": false
      }
    }
  }
}
